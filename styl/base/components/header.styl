/*----------------------------------------------------------------------------*
	$C-HEADER DESKTOP
*----------------------------------------------------------------------------*/
// Elemento padre del g-container
.c-fixed
	position: fixed
	top: 0
	width: 100%
	z-index: $z-fixed
	background-color: rgba(#282C34,.95)
	padding: 1rem 2.7rem
	@media only screen and (min-width: $breakpoints['hd'] + 1)
		padding: 0 6rem

.c-header
	display: flex
	justify-content: space-between
	& a
		white-space: nowrap

.c-header__logo
	display: flex
	justify-content: center
	font-size:  $text-size.medium
	align-items: center
	& a
		display: inherit


$grosor = 2px
ul.c-header__menu
	display: none
	@media only screen and (min-width: $breakpoints['l'] + 1)
		display: flex
		& li
			height: max-content
			border-radius: 100px
			margin: 3px
			border: $grosor solid #000
			& a
				line-height: 34px
				font-size: 1.8rem
				display: inline-block
				padding: 0 1.2rem
				font-weight: 700
				cursor: pointer
			&.active
				transition: .7s ease
				border: $grosor solid $base-color
				background: rgba(#FFF 0.13)
			&:hover
				transition: .5s ease
				background-color: $base-color-background
			& i
				vertical-align: middle
				font-size: 1.8rem
				padding-left: .8rem
/*----------------------------------------------------------------------------*
Dropdown menu del header para cualquier elemento que necesite un submenu.
*----------------------------------------------------------------------------*/
li.dropdown
	position: relative
	&:hover > ul,
	&:focus-within > ul,
	& ul:hover,
	& ul:focus
		visibility: visible
		opacity: 1
		display: block

ul.dropdown-container
	left: 0
	right: 0
	visibility: hidden
	min-width: 5rem
	position: absolute
	opacity: 0
	display: none
	& li
		text-align: center
		background-color: $base-color-background
		clear: both
		width: 100%
/*----------------------------------------------------------------------------*
	Menu social popup solo tiene que aparecer en desktop
	$Boton de "Siguenos" li element
*----------------------------------------------------------------------------*/
.c-menu-social
	display: none
	@media only screen and (min-width: $breakpoints['xl'] + 1)
		display: block
		position: relative
		background: $base-color
		& label, a
			color: $base2-color
		& ul
			display: none// x defecto no debe aparecer, se activa con el input
			position: absolute
			top: 125%
			left: -20%
			border-radius: 20px
			& li
				background: $base-color
				:hover
					color: $base-color
					transition: .5s ease
				&:nth-child(1):hover
					background: #3B5998
				&:nth-child(2):hover
					background: #833AB4
					background: linear-gradient(90deg, #833AB4 0%, #FC1D1D 50%, #FCB045 100%)
				&:nth-child(3):hover
					background: radial-gradient(circle, #1E2337 32%, #5000FF 91%)
				&:nth-child(4):hover
					background: #25D266


/*----------------------------------------------------------------------------*
	$HEADER MOBILE
*----------------------------------------------------------------------------*/
.c-header__burguer
	width: 4rem
	display: flex
	flex-direction: column
	justify-content: center
	& img
		vertical-align: middle
	@media only screen and (min-width: $breakpoints['l'] + 1)
		display: none

/*
====== Estilos del popup Zoom efect======
*/
.mfp-zoom-in
	/* Como va a entrar */
	.mfp-with-anim
		opacity: 0
		transform: scale(1.2)
		transition: all .4s ease-in-out 0s
	&.mfp-bg
		opacity: 0
		transition: all .4s ease-out
	/* Cuando esta estatico */
	&.mfp-ready
		.mfp-with-anim
			opacity: 1
			transform: scale(1)
		&.mfp-bg
			opacity: .75
	/* Cuando la animacion se v√°*/
	&.mfp-removing
		.mfp-with-anim
			transform: scale(1.2)
			opacity: 0
		&.mfp-bg
			opacity: 0

.mfp-close
	display: none !important
.mfp-bg
	background: $base-color-light !important
/*
====== End  Estilos popupZoom efect  ======
*/
.c-popup
	position: relative
	margin: 3.8rem auto 0
	width: 37rem
	box-shadow: #000 0px 0px 20px
	border-radius: 8px

.c-popup__menu // ul
	overflow: hidden
	background: $base2-color
	border-radius: 8px 8px 0 0
	& li
		border-bottom: 1px solid rgba($base-color, 0.2)
		&.active
			border: $grosor solid $base-color
			border-radius: 6px
			background: rgba(#FFF 0.13)
	& a
		font-size: 2.5rem
		font-weight: 500
		display: block
		text-align: center
		padding: 2.3rem
		& img
			width: 2.4rem
			padding-left: .3rem
		& i
			font-size: 2.3rem
			padding-left: .8rem
/*----------------------------------------------------------------------------*
	$Menu social mobile popup
*----------------------------------------------------------------------------*/
.c-popup__social
	display: flex
	flex-direction: row-reverse
	justify-content: space-around
	background: $base-color-light
	border-radius: 0 0 8px 8px
	& span
		display: none
	& i
		display: block
		font-size: 4.5rem
		padding: 1rem
		color $base2-color
